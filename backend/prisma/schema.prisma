generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String       @id @default(uuid())
  email            String       @unique
  passwordHash     String       @map("password_hash")
  username         String       @unique
  bio              String?
  location         String?
  avatarUrl        String?      @map("avatar_url")
  isPremium        Boolean      @default(false) @map("is_premium")
  createdAt        DateTime     @default(now()) @map("created_at")
  updatedAt        DateTime     @updatedAt @map("updated_at")
  comments         Comment[]
  confessions      Confession[]
  matchesAsA       Match[]      @relation("UserAMatches")
  matchesAsB       Match[]      @relation("UserBMatches")
  receivedMessages Message[]    @relation("ReceivedMessages")
  sentMessages     Message[]    @relation("SentMessages")
  reactions        Reaction[]
}

model Confession {
  id          String     @id @default(uuid())
  authorId    String     @map("author_id")
  content     String
  isAnonymous Boolean    @default(true) @map("is_anonymous")
  location    String?
  imageUrl    String?    @map("image_url")
  createdAt   DateTime   @default(now()) @map("created_at")
  comments    Comment[]
  author      User       @relation(fields: [authorId], references: [id])
  reactions   Reaction[]
}

model Reaction {
  id           String     @id @default(uuid())
  userId       String     @map("user_id")
  confessionId String     @map("confession_id")
  type         String     @default("like")
  confession   Confession @relation(fields: [confessionId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id])

  @@unique([userId, confessionId])
}

model Comment {
  id           String     @id @default(uuid())
  userId       String     @map("user_id")
  confessionId String     @map("confession_id")
  content      String
  createdAt    DateTime   @default(now()) @map("created_at")
  confession   Confession @relation(fields: [confessionId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id])
}

model Match {
  id        String   @id @default(uuid())
  userAId   String   @map("user_a_id")
  userBId   String   @map("user_b_id")
  status    String   @default("pending")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  userA     User     @relation("UserAMatches", fields: [userAId], references: [id])
  userB     User     @relation("UserBMatches", fields: [userBId], references: [id])

  @@unique([userAId, userBId])
}

model Message {
  id             String    @id @default(uuid())
  conversationId String    @map("conversation_id")
  senderId       String    @map("sender_id")
  receiverId     String    @map("receiver_id")
  content        String
  createdAt      DateTime  @default(now()) @map("created_at")
  readAt         DateTime? @map("read_at")
  receiver       User      @relation("ReceivedMessages", fields: [receiverId], references: [id])
  sender         User      @relation("SentMessages", fields: [senderId], references: [id])
}
